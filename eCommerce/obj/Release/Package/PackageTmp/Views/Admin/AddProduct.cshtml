@model IEnumerable<eCommerce.Models.SM_ProductType>
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_LayoutBackend.cshtml";
}
<form action="" method="">
    <div class="panel panel-default container-fluid">
        <div class="col-md-6">
            <div class="panel panel-default">

                <div class="panel-heading">Thông tin</div>
                <div class=" panel-body">
                    <div class="form-group">
                        <div class="col-md-4">Tên sản phẩm</div>

                        <input type="text" name="ProductName" id="ProductName" />

                    </div>

                    <div class="form-group">
                        <div class="col-md-4">Hình đại diện</div>

                        <input type="file" name="Avatar" accept="image/*" />
                    </div>

                    <div class="form-group">
                        <div class="col-md-4">Giá</div>


                        <input type="number" name="Price" id="Price" />

                    </div>

                    <div class="form-group">
                        <div class="col-md-4">Nội dung</div>


                        <textarea name="Description" id="Description"></textarea>

                    </div>

                    <div class="form-group">
                        <div class="col-md-4">Loại sản phẩm</div>

                            <select name="ProductTypeID">
                                @foreach (var item in Model)
                                {
                                    <option value="@item.ID">@item.ProductType</option>
                                }
                            </select>
          
                    </div>

                    <div class="form-group" >
                        <div class="col-md-4">Giảm giá</div>


                        <input type="checkbox" id="check" onclick="myFunction()"/>

                    </div>

                    <div class="form-group" id="disct" style="display:none;">
                        <div class="col-md-4">Giá Discount</div>


                        <input type="number" name="Discount" id="Discount" />

                    </div>

                    <div class="form-group">
                        <div class="col-md-4">Số lượng</div>


                        <input type="number" name="Quantity" id="Quantity" />

                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Lưu" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>
<script>
    function myFunction() {
        var check = document.getElementById("check");
        var x = document.getElementById("disct");
        if (check.checked === true) {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    }
</script>

