@using eCommerce
@model IEnumerable<eCommerce.Models.SM_Order>
@{
    ViewBag.Title = "Cart";
    int stt = 1;
}

<!-- checkout -->
<div class="checkout">
    <div class="container">
        <h2>Giỏ hàng của bạn có: <span>@Model.Count() sản phẩm</span></h2>
        <div class="checkout-right">
            <table class="timetable_sub">
                <thead>
                    <tr>
                        <th>SL No.</th>
                        <th>Hình ảnh</th>
                        <th>Số lượng</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Giảm giá</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr class="rem1">
                        <td class="invert">@stt</td>
                        <td class="invert-image"><img src="/images/avatar/@item.Avatar" alt="" class="img-responsive" /></td>
                        <td class="invert">
                            <div class="quantity">
                                <div class="quantity-select">
                                    <div class="entry value"><span>@item.Quantity</span></div>
                                </div>
                            </div>
                        </td>
                        <td class="invert">@item.PrductName</td>

                        <td class="invert">@item.Price VND</td>
                        <td class="invert">@item.Discount</td>            
                    </tr>
                    stt++;
                }
            </table>
        </div>
        <div class="checkout-left">
            <div class="checkout-right-basket">
                <a href="/product/allproduct"><span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>Continue Shopping</a>
                <a href="/checkout/payment">Check out<span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span></a>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
<!-- //checkout -->

