                                                <p>@Model.Skip(i).FirstOrDefault().ProductName</p>
                                                <h4>@string.Format("{0:n0}", Model.Skip(i).FirstOrDefault().Price) VND</h4>
                                            </div>
                                        </div>
                                    </figure>
                                </div>
                            </div>
                        </div>
                    </div>
                }
